<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="eu.citi_sense.vic.citi_sense.StationsActivity"
    android:padding="0px"
    android:orientation="vertical"
    android:background="@color/light_gray_background">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/stations_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#222222"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_menu_white_24dp"
            android:onClick="menuBtnClicked"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <fragment
                android:name="eu.citi_sense.vic.citi_sense.support_classes.fragments.SearchFragment"
                android:id="@+id/stations_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/search_fragment" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:text="@string/your_stations"
                android:textSize="17sp"
                android:textColor="@color/text_color_light"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/sliding_menu_selector"
                    android:clickable="true">
                    <ImageView
                        android:id="@+id/portable_station_icon_1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="7dp"
                        android:src="@drawable/ic_merilne_tocke_blue_gray"/>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:layout_toRightOf="@id/portable_station_icon_1"
                        android:layout_toLeftOf="@+id/portable_location_marker_1">
                        <TextView
                            android:id="@+id/portable_station_text_1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dark_blue_grey"
                            android:textSize="20sp"
                            android:layout_marginTop="12dp"
                            android:layout_marginLeft="12dp"
                            android:text="VESNA" />
                        <TextView
                            android:id="@+id/portable_station_battery_1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color_light"
                            android:textSize="12sp"
                            android:layout_marginTop="-5dp"
                            android:layout_marginLeft="12dp"
                            android:text="battery: 78%" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/portable_location_marker_1"
                        android:clickable="true"
                        android:background="@drawable/sliding_menu_selector"
                        android:layout_width="40dp"
                        android:padding="3dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_location"
                        android:layout_alignParentRight="true"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray_background"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@id/portable_station_icon_1"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/sliding_menu_selector"
                    android:clickable="true">
                    <ImageView
                        android:id="@+id/portable_station_icon_2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="7dp"
                        android:src="@drawable/ic_merilne_tocke_outline"/>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:layout_toRightOf="@id/portable_station_icon_2"
                        android:layout_toLeftOf="@+id/portable_location_marker_2">
                        <TextView
                            android:id="@+id/portable_station_text_2"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dark_blue_grey"
                            android:textSize="20sp"
                            android:layout_marginTop="12dp"
                            android:layout_marginLeft="12dp"
                            android:text="NETATMO" />
                        <TextView
                            android:id="@+id/portable_station_battery_2"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color_light"
                            android:textSize="12sp"
                            android:layout_marginTop="-5dp"
                            android:layout_marginLeft="12dp"
                            android:text="not in range" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/portable_location_marker_2"
                        android:clickable="true"
                        android:layout_width="40dp"
                        android:padding="3dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_location_outline"
                        android:layout_alignParentRight="true"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray_background"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@id/portable_station_icon_2"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/sliding_menu_selector"
                    android:clickable="true">
                    <ImageView
                        android:id="@+id/add_station_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="7dp"
                        android:src="@drawable/ic_plus"/>
                    <TextView
                        android:id="@+id/add_station_text"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:textColor="@color/very_light_gray"
                        android:textSize="20sp"
                        android:layout_marginLeft="12dp"
                        android:text="@string/add_station"
                        android:layout_toRightOf="@id/add_station_icon"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
